<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id='fleet_voyage_view_form' model='ir.ui.view'>
            <field name="name">mon_parc.voyage.form</field>
            <field name="model">mon_parc.voyage</field>
            <field name="arch" type="xml">
                <form string="Voyage">
                    <sheet>

                        <div class="oe_title">
                            <label for="ndossier" class="oe_edit_only"/>
                            <h1>
                                <field name="ndossier" placeholder="NÂ° Dossier"/>
                            </h1>
                        </div>


                        <group>
                            <label for="type_voyage" class="oe_edit_only"/>
                            <h2>
                                <field name="type_voyage" widget='radio' options="{'horizontal': true}"/>
                            </h2>
                        </group>


                        <group col="2">
                            <group>
                                <label for="datedepart" class="oe_edit_only"/>
                                <h2>
                                    <field name="datedepart" class="oe_inline" />
                                </h2>
                            </group>
                            <group>
                                <label for="datearrivee" class="oe_edit_only"/>
                                <h2>
                                    <field name="datearrivee" class="oe_inline" />
                                </h2>
                            </group>
                        </group>
                        <!-- <group col="2" string="Chauffeur"><field name="chauffeur_id"/><field name="chauffeur2_id"/></group> -->
                        <group col="2">
                            <group string="Driver">
                                <field name="chauffeur_id"/>
                                <field name="chauffeur2_id"/>
                            </group>
                            <group string="Vehicle">
                                <label for="tracteur_id"/>
                                <div class="o_row">
                                    <field name="tracteur_id"/>
                                </div>
                                <field name="remorque_id"/>
                            </group>
                            <group string="Client">
                                <field name="client_id"/>
                            </group>
                            <group string="trajet">
                                <field name="trajets_id"/>
                                <field name="pointdepart"/>
                                <field name="pointarrivee"/>
                                <field name="commentaire"/>
                            </group>

                            <group string="Frais de voyage">
                                <field name="Frais_de_voyage"/>
                                <field name="Frais_de_conducteur"/>
                                <field name="Frais_peage_Autoroute"/>
                                <field name="Frais_gasoil"/>
                                <field name="Frais_de_chargement"/>
                            </group>
                            <group string="Facturation">
                                <field name="factureid"/>
                                <field name="Avance"/>
                                <field name="reste"/>
                            </group>

                        </group>
                        <group string="Positions">
                            <field name="position_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="mon_parc.listVoyage">
            <field name="name">Voyage</field>
            <field name="model">mon_parc.voyage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="chauffeur_id"/>
                    <field name="tracteur_id"/>
                    <field name="remorque_id"/>
                    <field name="datedepart"/>
                    <field name="datearrivee"/>
                    <field name="pointdepart"/>
                    <field name="pointarrivee"/>
                    <field name="type_voyage"/>
                </tree>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="mon_parc.action_windowvoyage">
            <field name="name">Voyages</field>
            <field name="res_model">mon_parc.voyage</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- server action to the one above -->
        <record model="ir.actions.server" id="mon_parc.action_server">
            <field name="name">Voyage server</field>
            <field name="model_id" ref="model_mon_parc_voyage"/>
            <field name="state">code</field>
            <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
        </record>
        <record id="res_partner_action_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
          Create a new customer in your address book
        </p>
                <p>
          Odoo helps you easily track all activities related to a customer.
        </p>
            </field>
        </record>
        <!-- menu categories -->
        <menuitem name="voyage" id="mon_parc.voyage" parent="mon_parc.menu_root"/>
        <!-- actions   -->
        <menuitem name="liste des  voyages" id="mon_parc.voyage_list" parent="mon_parc.voyage"
              action="mon_parc.action_windowvoyage"/>
        <menuitem id="menu_account_customer2" name="liste des clients"
            parent="mon_parc.voyage" action="res_partner_action_customer"/>
    </data>
</odoo>